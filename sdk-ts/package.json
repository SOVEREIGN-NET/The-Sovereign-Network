{
  "name": "@zhtp/sdk",
  "version": "1.0.0",
  "description": "QUIC-native TypeScript SDK for ZHTP/Web4 protocol",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:integration": "vitest run tests/integration",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test && npm run lint"
  },
  "keywords": [
    "zhtp",
    "web4",
    "quic",
    "blockchain",
    "domains",
    "dapps"
  ],
  "author": "SOVN Contributors",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@noble/hashes": "^1.3.3",
    "cbor": "^9.0.0",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/cbor": "^6.0.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0",
    "tsup": "^8.0.1",
    "ts-node": "^10.9.1"
  }
}
