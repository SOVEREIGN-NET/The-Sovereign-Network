{
  "name": "@zhtp/sdk",
  "version": "1.0.0",
  "description": "QUIC-native TypeScript SDK for ZHTP/Web4 protocol",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage",
    "test:integration": "vitest run tests/integration",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test && npm run lint"
  },
  "keywords": [
    "zhtp",
    "web4",
    "quic",
    "blockchain",
    "domains",
    "dapps"
  ],
  "author": "SOVN Contributors",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@matrixai/quic": "^2.0.0",
    "@noble/hashes": "^1.3.3",
    "cbor": "^9.0.0",
    "crystals-kyber-js": "^2.5.0",
    "dilithium-crystals-js": "^1.1.3",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cbor": "^6.0.0",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.1.0",
    "ts-node": "^10.9.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
